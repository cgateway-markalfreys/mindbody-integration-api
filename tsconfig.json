{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "types": ["node"]
  },
  "include": [
    "src/index.ts",
    "src/lib/sessions.ts",
    "src/routes/checkout.ts",
    "src/routes/webhooks.ts",
    "src/routes/staff.ts",
    "src/routes/store.ts",
    "src/routes/admin.ts",
    "src/db/mysql.ts",
    "src/storage/apiConfig.ts",
    "src/web/frontendApi.ts",
    "src/config/loadDbEnv.ts",
    "src/services/http.ts",
    "src/services/cayman.ts",
    "src/services/mbo.ts",
    "src/utils/validate.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
